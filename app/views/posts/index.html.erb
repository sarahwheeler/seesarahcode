<h1>Blog</h1>

  <div class="col-xs-5 col-md-3">
    <div class="recent-posts">
      <h4><%= link_to "Archives", archives_path, class: "sidebar-link" %>
        <br> <br>
      <h4 class="sidebar-title">Most Recently</h4>
      <% @posts.limit(5).each do |post| %>
        <%= link_to post.title, post, class: "recent-title" %>
      <% end %> 
    </div>
    <div class="calendar">
    </div>
  </div>
  <div class="col-md-1"></div>
  <div class="col-md-1"></div>
  <div class="col-xs-12 col-sm-6 col-md-7">

    <% @posts.each do |post| %>
      <div class="post-date-box">
        <div class="date-box-row1">
          <div class="date-day"><%= post.created_at.strftime("%d")%></div>
          <div class="date-year"><%= post.created_at.strftime("%Y") %></div>
        </div>
        <div class="date-box-row2">
          <div class="date-month"><%= post.created_at.strftime("%b") %></div>
        </div>
      </div>
      <div class="post">
        <div class="title"><%= link_to post.title, post %></div>
        <div class="created-at"><%= distance_of_time_in_words(post.created_at, Time.now) %> ago</div>
        <div class="post-content"><%= post.content.html_safe %></div>
      </div>
    <% end %>
    <%= will_paginate @posts %>
  </div>
<br>
