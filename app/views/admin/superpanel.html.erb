<h1>Superpanel</h1>

<div class="row">
	<div class="col-xs-6">
		<div class="admin-posts">
			<h4>Posts</h4>
			<table>
				<tr>
					<th>Post Name/ID</th>
					<th>Date</th>
					<th>Edit</th>
					<th>Destroy?</th>
				</tr>
				<% @posts.each do |post| %>
					<tr>
						<td><%=link_to "#{post.title} (##{post.id})", post_path(post.id) %></td>
						<td><%= post.created_at.strftime("%b %d %C%y, %a, %l:%M %P")%></td>
						<td><%= link_to "Edit", edit_post_path(post.id) %></td>
						<td><%= link_to "Destroy Forever?", post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
	<div class="col-xs-6">
		<div class="new-post-btn">
		</div>
	</div>
</div>